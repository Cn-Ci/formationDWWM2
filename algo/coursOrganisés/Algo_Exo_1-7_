exo 6.6
    Que produit l'algorithme suivant ?
    tableau suite(7) en Entier
    variable i en entier
    debut
    suite(0) := 1 
    suite(1) := 1
    pour := 2 à 7 
        suite(i) := suite(i-1) + suite(i-2)
        i suivant
        Pour i := 0 à7 
            ecrire suite(i)
            i suivant 
    fin 

    0   1   2   3   4   5   6   7
    1   1   2   3   5   8   13  21
suite(i) = suite(i-1) + suite (i-2)
    2=1+1 
    3=2+2
    4=3+3
    5=4+4
    6=5+5
    
variables tableau(1:7): tableau d'entier; i: entier;
début
    suite(0):=1;
    suite(1):=1;
    
    pour (i=2; i<=7; i++) faire
        suite(i) := suite(i-1) + suite(i-2);
    fin pour
    
    pour (i=0; i<=7; i++) faire
        écrire suite(i);
    fin pour
fin
